    <title>New Post</title>
    <link rel="stylesheet" href="/css/editpage.css">

  </head>
  <body>
    <div class="editpage">
      <div class="container">
        <div class="heading">
          <div class="heading__left">
              <div>Reader's Hub</div>
              <div class="subHeading">A hoard for readers!</div>
          </div>
          <div class="heading__right">
              <form action="/backToDashboard" method="POST">
                <input class="btn btn-warning" type="submit" value="Dashboard">
              </form>            
          </div> 
        </div> 
          
          <form action="/addPost" method="POST">
              <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" id="title" name="title" autocomplete="off">
              </div>
              <div class="mb-3">
                <label for="categories" class="form-label">Categories</label>
                <input type="text" class="form-control" name="categories" id="categories" autocomplete="off">
              </div>
              <div class="mb-3">
                  <label for="content" class="form-label">Content</label><br>
                  <textarea class="form-label" name="content" id="content" rows="6" cols="120"></textarea>
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
    </div>

